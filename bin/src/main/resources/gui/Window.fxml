    <VBox spacing="10" AnchorPane.bottomAnchor="14" AnchorPane.leftAnchor="14" AnchorPane.rightAnchor="14" AnchorPane.topAnchor="14">
        <AnchorPane fx:id="headerPane">

            <TextField fx:id="tfSaveGame" layoutX="232.0" layoutY="14.0" prefWidth="860.0" />
            <Button fx:id="btnLoad" defaultButton="true" layoutX="14.0" layoutY="13.0" mnemonicParsing="false" onAction="#onLoad" prefHeight="62.0" prefWidth="86.0" text="Load!" />
            <TextField fx:id="tfLocalization" alignment="BOTTOM_LEFT" layoutX="232.0" layoutY="49.0" prefWidth="860.0" />
            <Button fx:id="btnBrowseSave" layoutX="1108.0" layoutY="13.0" mnemonicParsing="false" onAction="#onBrowseSave" text="Browse">
                <tooltip>
                    <Tooltip text="Like Romania1914_08_01.v2" />
                </tooltip>
            </Button>
            <Button fx:id="btnBrowseLocal" alignment="CENTER_RIGHT" layoutX="1108.0" layoutY="49.0" mnemonicParsing="false" onAction="#onBrowseLocal" text="Browse">
                <tooltip>
                    <Tooltip text="Like C:/Games/Victoria II/" />
                </tooltip>
            </Button>
            <Label layoutX="107.0" layoutY="14.0" text="Savegame path:">
                <tooltip>
                    <Tooltip text="Like Romania1914_08_01.v2" />
                </tooltip>
            </Label>
            <Label layoutX="107.0" layoutY="52.0" text="Game folder:">
                <tooltip>
                    <Tooltip text="Like C:/Games/Victoria II/" />
                </tooltip>
            </Label>
            <Label layoutX="107.0" layoutY="90.0" text="Mod folder:">
                <tooltip>
                    <Tooltip text="Like C:/Games/Victoria II/mod/SiR" />
                </tooltip>
            </Label>
            <TextField id="tfModName" fx:id="tfModPath" layoutX="232.0" layoutY="84.0" prefWidth="860.0" />
            <Button id="btnBrowseLocal" fx:id="btnBrowseMod" alignment="BASELINE_RIGHT" layoutX="1108.0" layoutY="84.0" mnemonicParsing="false" onAction="#onBrowseMod" text="Browse">
                <tooltip>
                    <Tooltip text="Like C:/Games/Victoria II/mod/SiR" />
                </tooltip>
            </Button>
            <Button fx:id="btnGoods" disable="true" layoutX="14.0" layoutY="83.0" mnemonicParsing="false" onAction="#onGoods" prefWidth="86.0" text="Goods" />
            <Label fx:id="lblStartDate" layoutX="14.0" layoutY="117.0" />
            <Label fx:id="lblCurrentDate" layoutX="14.0" layoutY="137.0" />
            <Label fx:id="lblPlayer" alignment="CENTER_RIGHT" layoutX="793.0" layoutY="117.0" prefWidth="393.0" />
            <Label id="lblbPopCount" fx:id="lblPopCount" alignment="CENTER_RIGHT" layoutX="929.0" layoutY="137.0" prefWidth="257.0" />
        </AnchorPane>

        <TableView id="table" fx:id="mainTable" tableMenuButtonVisible="true" VBox.vgrow="SOMETIMES">
            <columns>
                <TableColumn fx:id="colImage" prefWidth="30" text="Flag" />
                <TableColumn fx:id="colCountry" prefWidth="200" text="Country" />
                <TableColumn id="colPopulation" fx:id="colPopulation" prefWidth="100" text="Population" />
                <TableColumn fx:id="colConsumption" prefWidth="85.0" text="Consumption" />
                <TableColumn fx:id="colExport" prefWidth="85.0" text="Export" />
                <TableColumn fx:id="colImport" prefWidth="84.0" text="Import" />
                <TableColumn fx:id="colActualSupply" prefWidth="95.0" text="Actual supply" />
                <TableColumn fx:id="colGdp" prefWidth="95.0" text="GDP" />
                <TableColumn fx:id="colGDPPer" prefWidth="100.0" text="GDP per capita" />
                <TableColumn fx:id="colGDPPlace" prefWidth="58.0" text="GDP #" />
                <TableColumn fx:id="colGDPPart" prefWidth="85.0" text="GDP %" />
                <TableColumn fx:id="colGoldIncome" prefWidth="85.0" text="Gold income" />
                <TableColumn fx:id="colWorkForceRgo" prefWidth="47.0" text="RGO workforce" />
                <TableColumn fx:id="colWorkForceFactory" prefWidth="47.0" text="Industrial workforce" />
                <TableColumn fx:id="colEmployment" prefWidth="18.0" text="Employed" />
                <TableColumn prefWidth="137.0" text="Unemployment">
                    <columns>
                        <TableColumn fx:id="colUnemploymentRate" text="RGO" />
                        <TableColumn fx:id="colUnemploymentRateFactory" text="Factory" />
                    </columns>
                </TableColumn>
            </columns>
        </TableView>

        <Label alignment="CENTER" prefHeight="21.0" prefWidth="1366.0" text="Victoria 2 save game economy analyzer (inspired by Lionhunter's war analyzer)" />
        <Label alignment="CENTER" prefHeight="21.0" prefWidth="1369.0" text="Distributing under BSD License. Used  EugFile: an open-source Java library" />
    </VBox>

    <ProgressIndicator fx:id="piLoad" prefHeight="152.0" prefWidth="106.0" progress="-0.03" visible="false" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="500.0" AnchorPane.topAnchor="300.0" />
</AnchorPane>
